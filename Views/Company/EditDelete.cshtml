<template id="EditDelete-template">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="mt-3">Edit or Delete {{ pageTitle }}</h1>
            </div>
        </div>
        <div v-if="EntityType === 'Address'">
            <h2>ID: {{ Id }}</h2>
            <form>
                <attribute-input-form label="Street Address 1:" variable="streetAddress1" :placeholder="pageData.Address.streetAddress1" v-model="formData.Address.streetAddress1"></attribute-input-form>
                <attribute-input-form label="Street Address 2:" variable="streetAddress2" :placeholder="pageData.Address.streetAddress2" v-model="formData.Address.streetAddress2"></attribute-input-form>
                <attribute-input-form label="Postcode:" variable="postCode" :placeholder="pageData.Address.postCode" v-model="formData.Address.postCode"></attribute-input-form>
                <attribute-input-form label="Region:" variable="region" :placeholder="pageData.Address.region" v-model="formData.Address.region"></attribute-input-form>
                <attribute-input-form label="Country ID:" variable="countryId" :placeholder="pageData.Address.countryId" v-model="formData.Address.countryId"></attribute-input-form>
                <attribute-input-form label="Company ID:" variable="companyId" :placeholder="pageData.Address.companyId" v-model="formData.Address.companyId"></attribute-input-form>
                <div class="form-group">
                    <button type="button" v-on:click="handleUpdate(EntityType)" class="btn btn-success">Confirm Edit</button>
                    <button type="button" v-on:click="pathReturn()" tag="button" class="btn btn-secondary">Cancel</button>
                    <button type="button" v-on:click="openDeleteModal()" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>

        <div v-else-if="EntityType === 'Company'">
            <h2>ID: {{ Id }}</h2>
